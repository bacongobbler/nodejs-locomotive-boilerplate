          <li>
            <a href="#">Register</a>
          </li>
          <li>
            {?user}
              <a href="/logout">Logout</a>
            {:else}
              <a href="/login">Sign in</a>
            {/user}
          </li>
        </ul>
      </div>
    </div>
    <div class="container-fluid container-fluid-1">
      <div class="container">
