  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <img class="pull-left image" src="img/bolt.png">
        <ul class="nav pull-left">
          <li>
            <a href="#">Home</a>
          </li>
          <li>
            <a href="#">Tour</a>
          </li>
